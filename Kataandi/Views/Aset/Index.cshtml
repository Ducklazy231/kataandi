            <div class="form-group">
                <label asp-for="newAset.Lokasi_Aset" class="control-label"></label>
                <input asp-for="newAset.Lokasi_Aset" class="form-control" />
                <span asp-validation-for="newAset.Lokasi_Aset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newAset.Path_Foto_Tagging" class="control-label"></label>
                <input asp-for="newAset.Path_Foto_Tagging" class="form-control" />
                <span asp-validation-for="newAset.Path_Foto_Tagging" class="text-danger"></span>
            </div>
            <div class="form-group">
